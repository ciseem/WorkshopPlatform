<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Workshop Platform</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap">
    <link rel="stylesheet" href="~/css/premium.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-logo" style="padding: 1rem 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                <img src="/images/logo.png" alt="WorkshopPlatform" style="height: 38px; width: auto; border-radius: 8px;">
                <span style="font-size: 1.1rem; font-weight: 800; color: var(--dark); letter-spacing: -0.5px;">WorkshopPlatform</span>
            </div>
            
            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-chart-line"></i> Panoya Genel Bakış
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Workshop" ? "active" : "")" asp-controller="Workshop" asp-action="Index">
                            <i class="fas fa-calendar-check"></i> Tüm Eğitimler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" && ViewContext.RouteData.Values["Action"]?.ToString() == "Workshops" ? "active" : "")" asp-controller="User" asp-action="Workshops">
                            <i class="fas fa-graduation-cap"></i> Workshoplarım
                        </a>
                    </li>
                    @if (User.IsInRole("Instructor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Instructor" ? "active" : "")" asp-controller="Instructor" asp-action="Index">
                                <i class="fas fa-user-tie"></i> Eğitim Yönetimi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")" asp-controller="Dashboard" asp-action="Reports">
                                <i class="fas fa-file-invoice-dollar"></i> Finansal Raporlar
                            </a>
                        </li>
                    }
                </ul>
                
                <div style="margin-top: 1rem; border-top: 1px solid var(--gray-200); padding-top: 1rem;">
                     <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")" asp-controller="Profile" asp-action="Index">
                        <i class="fas fa-id-card"></i> Profilim
                    </a>
                </div>
            </nav>
            
            <div style="margin-top: auto;">
                <a asp-controller="Auth" asp-action="Logout" class="nav-link" style="color: var(--danger);">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Güvenli Çıkış</span>
                </a>
            </div>
        </aside>

        <main class="main-content">
            <header style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center; background: #fff; padding: 1.25rem 2.5rem; border-bottom: 1px solid var(--gray-200);">
                <div>
                    <h1 style="font-size: 1.5rem; font-weight: 700; margin: 0; color: var(--dark);">@ViewData["Title"]</h1>
                    <div style="font-size: 0.8rem; color: var(--secondary); font-weight: 500;">Workshop Yönetim Sistemi v5.0</div>
                </div>
                <div style="display: flex; gap: 1.5rem; align-items: center;">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        var profileImage = User.FindFirst("ProfileImage")?.Value;
                        <div style="display: flex; gap: 1rem; align-items: center; padding-left: 1.5rem; border-left: 1px solid var(--gray-200);">
                            <div style="text-align: right;">
                                <div style="font-weight: 700; font-size: 0.875rem; color: var(--dark);">@User.Identity.Name</div>
                                <div style="font-size: 0.7rem; color: var(--primary); font-weight: 700; text-transform: uppercase;">@(User.IsInRole("Instructor") ? "EĞİTMEN" : "KATILIMCI")</div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(profileImage))
                            {
                                <img src="@profileImage" alt="Profile" style="width: 42px; height: 42px; border-radius: 8px; object-fit: cover; border: 1px solid var(--gray-200);" />
                            }
                            else
                            {
                                <div style="width: 42px; height: 42px; background: var(--gray-100); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: var(--primary); font-weight: 800; font-size: 1rem; border: 1px solid var(--gray-200);">
                                    @((User.Identity.Name ?? "U").Substring(0, 1).ToUpper())
                                </div>
                            }
                        </div>
                    }
                </div>
            </header>
            
            <div class="content-body" style="animation: fadeIn 0.8s ease-out;">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
