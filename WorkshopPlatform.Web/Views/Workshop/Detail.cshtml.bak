@model WorkshopPlatform.Core.Entities.Workshop
@{
    ViewData["Title"] = Model.Baslik;
}

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 3rem;">
    <div>
        <img src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=1200&q=80" style="width: 100%; height: 400px; object-fit: cover; border-radius: 16px; margin-bottom: 2rem;">
        
        <div style="display: flex; gap: 1rem; margin-bottom: 2rem;">
            <span class="badge @(Model.UcretliMi ? "badge-paid" : "badge-free")" style="font-size: 1rem; padding: 0.5rem 1.5rem;">
                @(Model.UcretliMi ? $"{Model.Fiyat:C2}" : "Ücretsiz")
            </span>
            <span class="badge" style="background: var(--gray-200); color: var(--dark); font-size: 1rem; padding: 0.5rem 1.5rem;">
                @Model.Kategori
            </span>
        </div>

        <h2 style="font-size: 2rem; font-weight: 800; margin-bottom: 1.5rem;">@Model.Baslik</h2>
        
        <div style="font-size: 1.125rem; line-height: 1.8; color: var(--secondary); margin-bottom: 3rem;">
            @Model.Aciklama
        </div>

        <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem;">Eğitmen Hakkında</h3>
        <div class="premium-card" style="display: flex; align-items: center; gap: 1.5rem;">
            <div style="width: 64px; height: 64px; background: var(--primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; font-weight: 700;">
                @Model.OlusturanKullanici.AdSoyad.Substring(0, 1)
            </div>
            <div>
                <div style="font-weight: 700; font-size: 1.125rem;">@Model.OlusturanKullanici.AdSoyad</div>
                <div style="color: var(--secondary); font-size: 0.875rem;">Profesyonel Eğitmen</div>
            </div>
        </div>
    </div>

    <div>
        <div class="premium-card" style="position: sticky; top: 2rem;">
            <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 1.5rem;">Müsait Seanslar</h3>
            
            @if (TempData["Message"] != null)
            {
                <div style="padding: 1rem; background: #dcfce7; color: #166534; border-radius: 8px; font-size: 0.875rem; margin-bottom: 1rem;">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div style="padding: 1rem; background: #fee2e2; color: #991b1b; border-radius: 8px; font-size: 0.875rem; margin-bottom: 1rem;">
                    @TempData["Error"]
                </div>
            }

            <div style="display: flex; flex-direction: column; gap: 1rem;">
                @foreach (var seans in Model.Seanslar)
                {
                    <div class="seans-item" style="border: 1px solid var(--gray-100); border-radius: 8px; padding: 1.25rem; flex-direction: column; align-items: flex-start; gap: 1rem;">
                        <div style="width: 100%; display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div style="font-weight: 700;">@seans.Tarih.ToShortDateString()</div>
                                <div style="font-size: 0.875rem; color: var(--secondary);">Saat: @seans.Saat.ToString(@"hh\:mm")</div>
                            </div>
                            <div style="text-align: right;">
                                <div style="font-size: 0.75rem; color: var(--secondary);">Kontenjan</div>
                                <div style="font-weight: 600; color: @(seans.KalanKontenjan < 5 ? "var(--danger)" : "var(--success)")">
                                    @seans.KalanKontenjan / @seans.Kontenjan
                                </div>
                            </div>
                        </div>

                        <form asp-action="Join" method="post" style="width: 100%;">
                            <input type="hidden" name="seansId" value="@seans.Id" />
                            <button type="submit" style="width: 100%; padding: 0.75rem; background: var(--primary); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; transition: background 0.2s;">
                                Hemen Kaydol
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
