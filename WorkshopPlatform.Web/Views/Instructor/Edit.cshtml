@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        var initialLat = @(Model.Enlem ?? 41.0082m);
        var initialLng = @(Model.Boylam ?? 28.9784m);
        var map = L.map('edit-map').setView([initialLat, initialLng], @(Model.Enlem.HasValue ? 15 : 10));
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Â© OpenStreetMap'
        }).addTo(map);

        var marker;
        if (@(Model.Enlem.HasValue ? "true" : "false")) {
            marker = L.marker([initialLat, initialLng]).addTo(map);
        }

        map.on('click', function(e) {
            if (marker) { map.removeLayer(marker); }
            marker = L.marker(e.latlng).addTo(map);
            document.getElementById('enlem').value = e.latlng.lat;
            document.getElementById('boylam').value = e.latlng.lng;
        });
    </script>
}
